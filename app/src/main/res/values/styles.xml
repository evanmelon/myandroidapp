<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bjy_base_turntable_default_background_color</item>
        <item name="colorPrimaryDark">@color/bjy_base_turntable_default_background_color</item>
        <item name="colorAccent">@color/bjy_base_turntable_default_background_color</item>
    </style>

    <style name="MySuperAppTheme">
        <item name="android:windowBackground">@android:color/white</item> <!-- 設置窗口背景為白色 -->
        <item name="android:colorBackground">@android:color/white</item> <!-- 設置風格的背景為白色 -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- 設置文字的主要顏色為黑色 -->
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#676767</item>
        <item name="backgroundTint">#A75338</item>
        <!-- 其他你想設定的屬性 -->
    </style>

    <declare-styleable name="TurntableView">
        <attr name="background_color" format="color" />
        <attr name="sector_color" format="color" />
        <attr name="center_stroke_color" format="color" />
        <attr name="center_bottom_color" format="color" />
        <attr name="sector_text_color" format="color" />
        <attr name="start_btn_color" format="color" />
        <attr name="start_text_color" format="color" />
        </declare-styleable>

</resources>
